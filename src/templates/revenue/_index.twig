{% extends "_layouts/cp" %}
{%- from "_includes/forms" import text -%}

{% set title = "Revenue"|t('commerceinsights') %}
{% set selectedSubnavItem = "revenue" %}
{% set url = craft.url.create %}

{% block sidebar %}
    <nav>
        <ul>
            <li><a href="{{ url.query('formatter', 'revenue') }}" data-dynamic-link='{"query":{"formatter":"revenue"}}' {{ formatter == 'revenue' ? 'class="sel"' }}>Selected Date Range</a></li>
            <li><a href="{{ url.query('formatter', 'revenue') }}" data-dynamic-link='{"query":{"formatter":"revenue"}}' {{ formatter == 'revenue' ? 'class="sel"' }}>Today</a></li>
            <li><a href="{{ url.query('formatter', 'revenue') }}" data-dynamic-link='{"query":{"formatter":"revenue"}}' {{ formatter == 'revenue' ? 'class="sel"' }}>This Week</a></li>
            <li><a href="{{ url.query('formatter', 'revenue') }}" data-dynamic-link='{"query":{"formatter":"revenue"}}' {{ formatter == 'revenue' ? 'class="sel"' }}>This Month</a></li>
            <li><a href="{{ url.query('formatter', 'revenue') }}" data-dynamic-link='{"query":{"formatter":"revenue"}}' {{ formatter == 'revenue' ? 'class="sel"' }}>This Year</a></li>
        </ul>
    </nav>
{% endblock %}

{% block actionButton %}
    {% set ranges = {
                    'today': 'Today',
                    'this-week': 'This week',
                    'this-month': 'This month',
                    'this-quarter': 'This quarter',
                    'this-year': 'This year',
                    'yesterday': 'Yesterday',
                    'prev-week': 'Previous week',
                    'prev-month': 'Previous month',
                    'prev-quarter': 'Previous quarter',
                    'prev-year': 'Previous year',
                    '': 'Custom'
                } %}
    {% include "_includes/forms/select" with {name: "range", options: ranges, value: craft.request.getParam('range')} %}
    {% include "_includes/forms/date" with {name: "start", value: craft.request.getParam('start')} %}
    {% include "_includes/forms/date" with {name: "end", value: craft.request.getParam('end')} %}
{% endblock %}

{% block content %}
    <div class="ci-spacing">


        {% if totals %}
            <ul class="ci-totals">
                {% for key, value in totals %}
                    <li>
                        <div class="ci-total-label">{{ key }}</div> <strong class="ci-total-value">{{ value }}</strong>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}

        <div class="chart">
            <canvas id="chart" width="900" height="300" data-chart-data="{{ chartData|json_encode }}" data-chart-start="{{ min }}" data-chart-end="{{ max }}" data-chart-shows-currency="{{ chartShowsCurrency }}"></canvas>
        </div>

        <form method="get" class="ci-actions">
            <input type="hidden" name="formatter" value="{{ formatter }}">

            <div class="ci-action-search">
                {{ text({
                    name: "q",
                    value: craft.request.getParam('q'),
                    placeholder: "Search"|t('app')
                }) }}
            </div>
            <div class="ci-action-actions">
                <input type="submit" class="btn submit" value="Search">
                <a href="{{ craft.url.create.path('/admin/commerceinsights/csv') }}" data-dynamic-link='{"path":"/admin/commerceinsights/csv"}' class="btn">Export</a>
            </div>
        </form>

        <div class="elements">
            {{ chartTable|raw }}
        </div>
    </div>
{% endblock %}